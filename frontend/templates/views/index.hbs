<!DOCTYPE html>

<html>

{{>head}}

<body>
	<div class="container">
		{{>header}}

		<form>
			<div class="row">
				<div class="col s12">
					ISBN Number:
					<div class="input-field inline">
						<input type="text" placeholder="Please input ISBN" id="isbn">
						<label for="isbn"></label>
					</div>
					<button class="search-btn btn blue darken-3 waves-effect waves-light">Search</button>
				</div>
			</div>
		</form>
		
		<div class="progress hide">
			<div class="indeterminate"></div>
		</div>
		
        <div class="card card-panel teal book-content hide">
			<div class="row">
				<span class="card-title white-text">Book Title</span>
				<span class="new badge pageCount yellow black-text" data-badge-caption="pages">100</span>
			</div>
            <div class="row">
                <div class="col s5">
					<img class="materialboxed book-image" width="400" src="">
					<div class="card-action center-align">
						<button class="btn waves-effect waves-light orange black-text left borrow" type="submit" name="action">Borrow
  						</button>
						<button class="btn waves-effect waves-light red black-text cancel" type="submit" name="action">Cancel
  						</button>
					</div>
                </div>
                <div class="col s7">
                    <ul class="collection">
                        <li class="collection-item"><strong>Authors:</strong> <a class="authors" href="#">Kevin Vo</a></li>
                        <li class="collection-item publisher"><strong>Publisher:</strong> Publishing Company</li>
                        <li class="collection-item">
                            <strong>Categories:</strong>
                            <a class="categories" href="#">Finance</a>
                        </li>
                        <li class="collection-item description card-content">
                            <strong>Description:</strong>
                            <blockquote class="book-summary">
                                Lorem ipsum dolor sit amet consectetur adipisicing elit. Accusantium iure cupiditate quod saepe repellat illum aut quasi ullam consequuntur quaerat.
                            </blockquote>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="container book-update hide">
            <div class="row">
                <div class="col m10 offset-m1 s12">
                    <h2 class="center-align">Update Book</h2>
                    <div class="row">
                        <form class="col m8 offset-m2 s12">
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="update-title" type="text" placeholder="Title">
                                    <label for="update-title"></label>
                                </div>
                                <div class="input-field col s12">
                                    <input id="update-author" type="text" placeholder="Author">
                                    <label for="update-author"></label>
                                </div>
                                <div class="input-field col s12">
                                    <input id="update-page-count" type="text" placeholder="Number of Pages">
                                    <label for="update-page-count"></label>
                                </div>
                                <div class="input-field col s12">
                                    <textarea id="update-description" class="materialize-textarea" placeholder="Description"></textarea>
                                    <label for="update-description"></label>
                                </div>
                            </div>

                            <div class="divider"></div>
                            <div class="row">
                                <div class="col m12">
                                    <p class="right-align">
                                        <button class="btn btn-large waves-effect waves-light update-button" type="button" name="action">Update</button>
                                        <button class="btn btn-large waves-effect waves-light delete-button" type="button" name="action">Delete</button>
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

		
		<!-- Book Count -->
		<h3 class="center-align">Total Books:
			<span class="total-books">0</span>
		</h3>

		<!-- Item List -->
		<ul id="item-list" class="collection">

			<li class="collection-item" id="book-0">
				<strong>Book: </strong>
				<em>One World Worker</em>
				&emsp;
				<strong>Author: </strong>
				<em>OWW</em>
				&emsp;
				<strong>Pages: </strong>
				<em>922</em>
				<a href="#" class="secondary-content">
					<i class="edit-item fa fa-pencil"></i>
				</a>
			</li>

		</ul>

		{{>footer}}
	</div>

	<script src="/js/app.js"></script>
</body>

</html>